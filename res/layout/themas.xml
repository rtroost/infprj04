		        android:background="@color/gray"
		        android:layout_marginBottom="6dp" >
			</GridLayout>
			
	        
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:textSize="20px"
	            android:inputType="textPersonName"
	            android:text="Mensenrechteneducatie"
	            android:layout_marginBottom="4dp"
	            android:onClick="thema8" />

	       <LinearLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginBottom="4dp"
	           android:onClick="thema8" >

	           <TextView
	               android:id="@+id/textView4"
	               android:layout_width="134dp"
	               android:layout_height="match_parent"
	               android:layout_marginRight="4dp"
	               android:layout_weight="0.48"
	               android:singleLine="false"
	               android:text="Kennis over de mensenrechten is onontbeerlijk voor de naleving ervan. Amnesty International wil huidige en toekomstige generaties inspireren tot een positieve rol in het sterk houden van het draagvlak voor de mensenrechten. Mensenrechteneducatie in binnen- en buitenland helpt daarbij."
	               android:textSize="12px" />

	           <ImageView
	               android:id="@+id/imageView1"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:src="@drawable/thema8" />
	       </LinearLayout>
	       
	       <GridLayout
