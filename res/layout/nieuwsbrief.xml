<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android:list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/GridLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="19"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="141dp"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:src="@drawable/nieuwsbriefimage" android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/nieuwsbriefView"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="1"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="Wilt u op de hoogte blijven over de nieuwste campagnes en meest urgente acties? Meld u dan aan voor de elektronische nieuwsbrief Kom in actie! Het belangrijkste Amnesty-nieuws krijgt u dan toegestuurd in uw inbox."
            android:textSize="13dp" />

        <Button
            android:id="@+id/buttonNieuwsbrief"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:text="Inschrijven voor nieuwsbrief" android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="266dp"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="left"
            android:layout_row="6"
            android:text="U kunt met klikken op deze button naar de website van Amnesty International om te aanmelden of afmelden."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="9dp" />

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="0" />

        <Space
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_row="0" />

        <Space
            android:layout_width="282dp"
            android:layout_height="1dp"
            android:layout_column="2"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="2" />

        <Space
            android:layout_width="1dp"
            android:layout_height="111dp"
            android:layout_column="0"
            android:layout_row="0" />
    </GridLayout>

</ScrollView>