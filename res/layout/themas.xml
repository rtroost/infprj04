           <TextView
	            android:id="@+id/thema1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:textSize="20px"
	            android:inputType="textPersonName"
	            android:text="bedrijven en mensenrechten"
