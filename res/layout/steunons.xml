<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="8"
    android:orientation="horizontal" >

    <GridLayout
        android:layout_height="30dip"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@color/amnastyyellow"
        android:columnCount="3"
        android:rowCount="1" >

        <Button
            android:id="@+id/about"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@drawable/about" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:gravity="fill_vertical|center_vertical|center_horizontal"
            android:text="Steun Amnesty International"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/search"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="bottom|right"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:background="@drawable/search" />
    </GridLayout>

    <GridLayout
        android:layout_height="2dip"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@color/gray"
        android:columnCount="3"
        android:rowCount="1" >
    </GridLayout>

    <TextView
        android:id="@+id/steunOnsView"
        android:layout_width="281dp"
        android:layout_height="210dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:ems="10"
        android:fadeScrollbars="true"
        android:paddingRight="10dp"
        android:text="Met uw donatie zet Amnesty International zich in voor de duizenden slachtoffers van bijvoorbeeld vervolging, discriminatie en marteling. Amnesty is hét goede doel voor mensenrechten. Om onafhankelijk te blijven, neemt Amnesty voor de uitvoering van onderzoek en acties tegen mensenrechtenschendingen geen giften aan van overheden. Daarom zijn wij in ons werk afhankelijk van donaties van mensen zoals u. Help nú mee de mensenrechten wereldwijd te beschermen en word lid van Amnesty."
        android:textSize="13dp" >

        <requestFocus />
    </TextView>

    <Button
        android:id="@+id/buttonDoneren"
        android:layout_width="270dp"
        android:layout_column="1"
        android:layout_row="4"
        android:clickable="true"
        android:linksClickable="true"
        android:text="Doneren" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2" />

    <Space
        android:layout_width="1dp"
        android:layout_height="176dp"
        android:layout_column="0"
        android:layout_row="3" />

    <Button
        android:id="@+id/buttonWordLid"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:text="Word lid van Amnesty International" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="7" />

    <Space
        android:layout_width="1dp"
        android:layout_height="142dp"
        android:layout_column="0"
        android:layout_row="8" />

    <Button
        android:id="@+id/buttonEenmaligDoneren"
        android:layout_width="274dp"
        android:layout_column="1"
        android:layout_row="8"
        android:text="Eenmalig donatie maken" />

    <android.support.v7.widget.Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="5" />

</GridLayout>